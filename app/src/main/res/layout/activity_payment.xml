<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_blue1">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_login2"
        android:layout_width="101dp"
        android:layout_height="35dp"
        android:layout_marginTop="33dp"
        android:background="@drawable/gradient_green"
        android:text="Pay"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/inputExpiryDate"
        app:layout_constraintStart_toStartOf="@+id/inputExpiryDate"
        app:layout_constraintTop_toBottomOf="@+id/inputExpiryDate" />

    <EditText
        android:id="@+id/inputCardNumber"
        android:layout_width="309dp"
        android:layout_height="49dp"
        android:background="@drawable/input_bg"
        android:backgroundTint="@color/white"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Card Number"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        app:layout_constraintEnd_toEndOf="@+id/txt_payment"
        app:layout_constraintStart_toStartOf="@+id/txt_payment"
        tools:layout_editor_absoluteY="257dp" />

    <EditText
        android:id="@+id/inputNameOnCard"
        android:layout_width="309dp"
        android:layout_height="49dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/input_bg"
        android:backgroundTint="@color/white"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Name on card"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        app:layout_constraintEnd_toEndOf="@+id/inputCardNumber"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/inputCardNumber"
        app:layout_constraintTop_toBottomOf="@+id/inputCardNumber" />

    <EditText
        android:id="@+id/inputExpiryDate"
        android:layout_width="153dp"
        android:layout_height="51dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/input_bg"
        android:backgroundTint="@color/white"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Expiry Date"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        app:layout_constraintStart_toStartOf="@+id/inputNameOnCard"
        app:layout_constraintTop_toBottomOf="@+id/inputNameOnCard" />

    <EditText
        android:id="@+id/inputExpiryDate2"
        android:layout_width="90dp"
        android:layout_height="51dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/input_bg"
        android:backgroundTint="@color/white"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="CVV"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        app:layout_constraintEnd_toEndOf="@+id/inputNameOnCard"
        app:layout_constraintTop_toBottomOf="@+id/inputNameOnCard" />

    <TextView
        android:id="@+id/blues"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="168dp"
        android:fontFamily="serif"
        android:text="Blues"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_payment"
        android:layout_width="174dp"
        android:layout_height="47dp"
        android:layout_marginTop="72dp"
        android:fontFamily="serif"
        android:text="Payment"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blues" />

    <ImageView
        android:id="@+id/bell"
        android:layout_width="45dp"
        android:layout_height="41dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bell" />

    <ImageView
        android:id="@+id/bottom_logo"
        android:layout_width="59dp"
        android:layout_height="58dp"
        app:srcCompat="@drawable/logo"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="623dp" />

    <TextView
        android:id="@+id/txt_copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:text=" 2023 All Rights Reserved"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/bottom_logo"
        app:layout_constraintStart_toStartOf="@+id/bottom_logo" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="16dp"
        android:layout_height="17dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txt_copyright"
        app:srcCompat="@drawable/ic_baseline_copyright_24" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="48dp"
        app:layout_constraintStart_toEndOf="@+id/blues"
        app:srcCompat="@drawable/ic_baseline_person_24"
        tools:layout_editor_absoluteY="31dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/blues"
        app:layout_constraintHorizontal_bias="0.072"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_baseline_menu_24"
        tools:layout_editor_absoluteY="39dp" />

    <LinearLayout
        android:id="@+id/paymenticons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="108dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_login2"
        app:layout_constraintStart_toStartOf="@+id/btn_login2"
        app:layout_constraintTop_toBottomOf="@+id/btn_login2">


        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="2dp"
            app:srcCompat="@drawable/visa" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="2dp"
            android:src="@drawable/img" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="2dp"
            android:src="@drawable/img_1" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="2dp"
            android:src="@drawable/img_2" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="2dp"
            android:src="@drawable/img_3" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>